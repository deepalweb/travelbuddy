# Frontend Environment Variables
VITE_API_BASE_URL=http://localhost:3001

# API Keys
GOOGLE_PLACES_API_KEY=your-google-places-api-key
VITE_GOOGLE_PLACES_API_KEY=your-google-places-api-key
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key
VITE_UNSPLASH_SECRET_KEY=your-unsplash-secret-key

# Database
MONGO_URI=mongodb://localhost:27017/travelbuddy

# Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Firebase Admin Credentials (JSON format)
FIREBASE_ADMIN_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project-id"}

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
PAYPAL_WEBHOOK_SECRET=your-webhook-secret
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_BASE_URL=https://api.sandbox.paypal.com

# Other Configuration
NODE_ENV=development
PORT=3001
DEFAULT_PLACES_RADIUS_M=20000
ADMIN_API_KEY=your-admin-api-key
ENABLE_FIREBASE_AUTH=true
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem