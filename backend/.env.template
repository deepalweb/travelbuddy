# TravelBuddy Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Google APIs
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
VITE_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT & Session Secrets
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Environment
NODE_ENV=development
PORT=3001

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin (Service Account JSON - single line, escape newlines as \\n)
FIREBASE_ADMIN_CREDENTIALS_JSON={"type":"service_account","project_id":"your_project",...}

# Unsplash API (for images)
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key
VITE_UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your_resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Admin Access
ADMIN_API_KEY=your_secure_admin_key

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_WEBHOOK_SECRET=your_webhook_secret
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_BASE_URL=https://api.sandbox.paypal.com

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
ENABLE_HTTPS=false

# Optional Settings
DEFAULT_PLACES_RADIUS_M=20000
ENABLE_FIREBASE_AUTH=true