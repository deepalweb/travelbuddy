# TravelBuddy Backend Environment Configuration Template
# Copy this file to .env and replace placeholder values with your actual credentials

# Frontend Environment Variables
VITE_API_BASE_URL=http://localhost:3001

# API Keys - Replace with your actual keys
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here
VITE_GOOGLE_PLACES_API_KEY=your-google-places-api-key-here
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Database Configuration
MONGO_URI=your-mongodb-connection-string-here

# Security Keys - Generate secure random strings
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here
ADMIN_API_KEY=your-secure-admin-api-key-here
DEMO_TOKEN=your-demo-token-for-testing

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id

# Unsplash API Configuration
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
VITE_UNSPLASH_SECRET_KEY=your-unsplash-secret-key-here
UNSPLASH_APPLICATION_ID=your-unsplash-app-id
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
UNSPLASH_SECRET_KEY=your-unsplash-secret-key-here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint-here
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment
AZURE_MAPS_API_KEY=your-azure-maps-api-key-here

# Application Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000
WEBSITE_HOSTNAME=localhost
DEFAULT_PLACES_RADIUS_M=20000
ENABLE_FIREBASE_AUTH=true

# PayPal Configuration - SANDBOX
PAYPAL_CLIENT_ID=YOUR_SANDBOX_CLIENT_ID
PAYPAL_SECRET=YOUR_SANDBOX_SECRET
PAYPAL_WEBHOOK_SECRET=your-webhook-secret-here
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_BASE_URL=https://api.sandbox.paypal.com

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
ENABLE_HTTPS=true

# Firebase Admin Configuration
FIREBASE_ADMIN_CREDENTIALS_JSON=disabled